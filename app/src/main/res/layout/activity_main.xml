<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.hassannaqvi.leaps_scaleup.ui.activities.MainActivity">

    <data>

        <variable
            name="callback"
            type="com.example.hassannaqvi.leaps_scaleup.ui.activities.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Login progress -->

        <TextView
            android:id="@+id/testing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ticker_red"
            android:elevation="6dp"
            android:gravity="center_horizontal"
            android:keepScreenOn="true"
            android:padding="4dp"
            android:text="ONLY FOR TESTING"
            android:textColor="@color/dullWhile"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="50dp">

                <TextView
                    android:id="@+id/lblheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/dullWhile"
                    android:text="Message!!!"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblMainMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Main Menu"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recordSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/black"
                    android:padding="20dp"
                    android:text="Records Summary"
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="?android:textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:text="AREA: "
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spAreas"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="35"
                        android:gravity="center"
                        android:popupBackground="#ffffff" />

                </LinearLayout>


                <Button
                    android:id="@+id/openForm01a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:onClick="@{() -> callback.openForm01a()}"
                    android:text="Enrolment - Population Survey"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/openForm01b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:onClick="@{() -> callback.openForm01b()}"
                    android:text="Enrolment - School Cohort"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/openAnthro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:onClick="@{() -> callback.openAnthro()}"
                    android:text="Anthropometry"
                    android:textColor="@color/colorPrimaryDark" />
                <Button
                    android:id="@+id/openEF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:onClick="@{() -> callback.openEF()}"
                    android:text="Anthropometry"
                    android:textColor="@color/colorPrimaryDark" />


                <Button
                    android:id="@+id/openA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openA"
                    android:text="OPEN A"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB"
                    android:text="OPEN B"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openC"
                    android:text="OPEN C"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openD"
                    android:text="OPEN D"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openE"
                    android:text="OPEN E"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openF"
                    android:text="OPEN F"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openG"
                    android:text="OPEN G"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openH"
                    android:text="OPEN H"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openI"
                    android:text="OPEN I"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openJ"
                    android:text="OPEN J"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openK"
                    android:text="OPEN K"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openLMO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openLMO"
                    android:text="OPEN LMO"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/syncServer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:onClick="syncServer"
                    android:text="Upload Data"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/openDB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openDB"
                    android:text="Open Database Manager" />


                <LinearLayout
                    android:id="@+id/adminsec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/syncDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/colorPrimary"
                        android:onClick="syncDevice"
                        android:text="Download Data"
                        android:textColor="@color/colorPrimaryDark" />

                    <Button
                        android:id="@+id/downloadApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/red"
                        android:text="DOWNLOAD APP"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/updateApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:background="#D60000"
                        android:onClick="updateApp"
                        android:text="Update App"
                        android:visibility="gone" />

                    <!--<Button
                        android:id="@+id/openDB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:onClick="openDB"
                        android:text="Open Database Manager" />-->

                    <Button
                        android:id="@+id/testGPS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:onClick="testGPS"
                        android:text="Test GPS Coordinates" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</layout>